    <body>
      <script>

      var numero=parseInt(prompt ("Di un número al azar"));

      var resto = (numero % 2);


      if (resto==0) {
      alert ("El número que has puesto es par")
      }else if (resto==1){
      alert ("El número que has puesto es impar")
      }

      </script>
